---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
---

<Layout title="Dashboard">
  <Header />

  <main class="container">
    <div class="dashboard-header">
      <div>
        <h1>Databases</h1>
        <p class="subtitle">Select a database to start running queries.</p>
      </div>
      <div class="header-actions">
        <button id="btn-create-db" class="btn btn-primary"
          >Create Database</button
        >
        <button id="btn-mount-db" class="btn btn-secondary"
          >Mount Database</button
        >
      </div>
    </div>

    <!-- Modals -->
    <dialog id="modal-create-db" class="modal modal-wide">
      <div class="modal-content">
        <h2>Create Database</h2>
        <form id="form-create-db">
          <div class="form-row">
            <div class="form-group">
              <label for="create-name">Database Name *</label>
              <input
                type="text"
                id="create-name"
                name="name"
                required
                pattern="[a-zA-Z0-9_-]{3,64}"
                placeholder="my_new_db"
              />
              <small>3-64 characters, alphanumeric + underscores/dashes.</small>
            </div>
          </div>

          <details class="advanced-options">
            <summary>Advanced Options</summary>

            <div class="form-section">
              <h4>Encryption</h4>
              <div class="form-row">
                <div class="form-group form-group-checkbox">
                  <label class="checkbox-label">
                    <input
                      type="checkbox"
                      id="create-encrypted"
                      name="isEncrypted"
                    />
                    <span>Enable Encryption (SQLCipher)</span>
                  </label>
                </div>
              </div>
              <div class="form-row" id="create-key-row" style="display: none;">
                <div class="form-group">
                  <label for="create-key">Encryption Key</label>
                  <input
                    type="password"
                    id="create-key"
                    name="key"
                    placeholder="Enter encryption key"
                  />
                  <small>Leave empty to use the server's default key.</small>
                </div>
              </div>
            </div>

            <div class="form-section">
              <h4>Connection Pool</h4>
              <div class="form-row form-row-3">
                <div class="form-group">
                  <label for="create-max-open">Max Open Conns</label>
                  <input
                    type="number"
                    id="create-max-open"
                    name="maxOpenConns"
                    min="0"
                    placeholder="0 = unlimited"
                  />
                </div>
                <div class="form-group">
                  <label for="create-max-idle">Max Idle Conns</label>
                  <input
                    type="number"
                    id="create-max-idle"
                    name="maxIdleConns"
                    min="0"
                    placeholder="0 = default"
                  />
                </div>
                <div class="form-group">
                  <label for="create-lifetime">Conn Max Lifetime (ms)</label>
                  <input
                    type="number"
                    id="create-lifetime"
                    name="connMaxLifetimeMs"
                    min="0"
                    placeholder="0 = no limit"
                  />
                </div>
              </div>
            </div>

            <div class="form-section">
              <h4>SQLite Extensions</h4>
              <div class="form-group">
                <label for="create-extensions">Extensions</label>
                <textarea
                  id="create-extensions"
                  name="extensions"
                  rows="2"
                  placeholder="crypto-0.28.0
/absolute/path/to/extra.so"
                ></textarea>
                <small
                  >Managed folder names (e.g., crypto-0.28.0) or absolute paths.</small
                >
              </div>
            </div>

            <div class="form-section">
              <h4>PRAGMA Settings</h4>
              <div class="form-group">
                <label for="create-pragmas">Pragmas</label>
                <textarea
                  id="create-pragmas"
                  name="pragmas"
                  rows="3"
                  placeholder="journal_mode=wal
busy_timeout=5000"></textarea>
                <small>Key=value pairs, one per line.</small>
              </div>
            </div>
          </details>

          <div class="modal-actions">
            <button type="button" class="btn btn-ghost btn-close-modal"
              >Cancel</button
            >
            <button type="submit" class="btn btn-primary">Create</button>
          </div>
        </form>
      </div>
    </dialog>

    <dialog id="modal-mount-db" class="modal modal-wide">
      <div class="modal-content">
        <h2>Mount Database</h2>
        <form id="form-mount-db">
          <div class="form-row form-row-2">
            <div class="form-group">
              <label for="mount-name">Display Name *</label>
              <input
                type="text"
                id="mount-name"
                name="name"
                required
                pattern="[a-zA-Z0-9_-]{3,64}"
                placeholder="my_external_db"
              />
              <small>3-64 characters, alphanumeric + underscores/dashes.</small>
            </div>
            <div class="form-group">
              <label for="mount-path">Database File Path *</label>
              <input
                type="text"
                id="mount-path"
                name="dbPath"
                required
                placeholder="/var/lib/sqlite/data.db"
              />
              <small>Absolute path to the existing SQLite file.</small>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group form-group-checkbox">
              <label class="checkbox-label">
                <input type="checkbox" id="mount-readonly" name="readOnly" />
                <span>Read-Only Mode</span>
              </label>
              <small>Open the database in read-only mode.</small>
            </div>
          </div>

          <details class="advanced-options">
            <summary>Advanced Options</summary>

            <div class="form-section">
              <h4>Encryption</h4>
              <div class="form-row">
                <div class="form-group form-group-checkbox">
                  <label class="checkbox-label">
                    <input
                      type="checkbox"
                      id="mount-encrypted"
                      name="isEncrypted"
                    />
                    <span>Database is Encrypted (SQLCipher)</span>
                  </label>
                </div>
              </div>
              <div class="form-row" id="mount-key-row" style="display: none;">
                <div class="form-group">
                  <label for="mount-key">Encryption Key</label>
                  <input
                    type="password"
                    id="mount-key"
                    name="key"
                    placeholder="Enter encryption key"
                  />
                  <small>Required for encrypted databases.</small>
                </div>
              </div>
            </div>

            <div class="form-section">
              <h4>Connection Pool</h4>
              <div class="form-row form-row-3">
                <div class="form-group">
                  <label for="mount-max-open">Max Open Conns</label>
                  <input
                    type="number"
                    id="mount-max-open"
                    name="maxOpenConns"
                    min="0"
                    placeholder="0 = unlimited"
                  />
                </div>
                <div class="form-group">
                  <label for="mount-max-idle">Max Idle Conns</label>
                  <input
                    type="number"
                    id="mount-max-idle"
                    name="maxIdleConns"
                    min="0"
                    placeholder="0 = default"
                  />
                </div>
                <div class="form-group">
                  <label for="mount-lifetime">Conn Max Lifetime (ms)</label>
                  <input
                    type="number"
                    id="mount-lifetime"
                    name="connMaxLifetimeMs"
                    min="0"
                    placeholder="0 = no limit"
                  />
                </div>
              </div>
            </div>

            <div class="form-section">
              <h4>SQLite Extensions</h4>
              <div class="form-group">
                <label for="mount-extensions">Extensions</label>
                <textarea
                  id="mount-extensions"
                  name="extensions"
                  rows="2"
                  placeholder="crypto-0.28.0
/absolute/path/to/extra.so"
                ></textarea>
                <small
                  >Managed folder names (e.g., crypto-0.28.0) or absolute paths.</small
                >
              </div>
            </div>

            <div class="form-section">
              <h4>PRAGMA Settings</h4>
              <div class="form-group">
                <label for="mount-pragmas">Pragmas</label>
                <textarea
                  id="mount-pragmas"
                  name="pragmas"
                  rows="3"
                  placeholder="journal_mode=wal
busy_timeout=5000"></textarea>
                <small>Key=value pairs, one per line.</small>
              </div>
            </div>
          </details>

          <div class="modal-actions">
            <button type="button" class="btn btn-ghost btn-close-modal"
              >Cancel</button
            >
            <button type="submit" class="btn btn-primary">Mount</button>
          </div>
        </form>
      </div>
    </dialog>

    <dialog id="modal-attach-db" class="modal">
      <div class="modal-content">
        <h2>Attach Database</h2>
        <form id="form-attach-db">
          <input type="hidden" id="attach-parent" name="parent" />

          <div class="form-group">
            <p>Parent Database: <strong id="attach-parent-display"></strong></p>
          </div>

          <div class="form-group">
            <label for="attach-target">Select Database to Attach *</label>
            <select id="attach-target" name="target" required>
              <option value="">-- Select a database --</option>
            </select>
          </div>

          <div class="form-group">
            <label for="attach-alias">Alias *</label>
            <input
              type="text"
              id="attach-alias"
              name="alias"
              required
              pattern="[a-zA-Z0-9_-]{1,64}"
              placeholder="e.g. archive, stats"
            />
            <small
              >The name used to reference this database in SQL (e.g.
              alias.table).</small
            >
          </div>

          <div class="modal-actions">
            <button type="button" class="btn btn-ghost btn-close-modal"
              >Cancel</button
            >
            <button type="submit" class="btn btn-primary">Attach</button>
          </div>
        </form>
      </div>
    </dialog>

    <dialog id="modal-load-extension" class="modal">
      <div class="modal-content">
        <h2>Load Extension</h2>
        <form id="form-load-extension">
          <input type="hidden" id="load-ext-db" name="database" />

          <div class="form-group">
            <p>Database: <strong id="load-ext-db-display"></strong></p>
          </div>

          <div class="form-group">
            <label for="load-ext-select">Select Extension *</label>
            <select id="load-ext-select" name="folderName" required>
              <option value="">-- Loading extensions... --</option>
            </select>
          </div>

          <div class="modal-actions">
            <button type="button" class="btn btn-ghost btn-close-modal"
              >Cancel</button
            >
            <button type="submit" class="btn btn-primary">Load</button>
          </div>
        </form>
      </div>
    </dialog>

    <div id="db-list" class="db-grid">
      <!-- Loaded Client-Side -->
      <div class="loading">Loading databases...</div>
    </div>

    <div id="error-alert" class="error-alert" style="display: none;"></div>
  </main>
</Layout>

<script>
  import {
    getClient,
    getAuthHeaders,
    AUTH_KEY,
    performLogout,
    isAdmin,
    canManageDatabases,
  } from "../lib/client";
  import { AdminService, DatabaseService } from "../gen/db/v1/db_service_pb";

  const dbList = document.getElementById("db-list");
  const errorAlert = document.getElementById("error-alert");

  // Modals
  const modalCreate = document.getElementById(
    "modal-create-db",
  ) as HTMLDialogElement;
  const modalMount = document.getElementById(
    "modal-mount-db",
  ) as HTMLDialogElement;
  const modalAttach = document.getElementById(
    "modal-attach-db",
  ) as HTMLDialogElement;
  const modalLoadExt = document.getElementById(
    "modal-load-extension",
  ) as HTMLDialogElement;
  const formCreate = document.getElementById(
    "form-create-db",
  ) as HTMLFormElement;
  const formMount = document.getElementById("form-mount-db") as HTMLFormElement;
  const formAttach = document.getElementById(
    "form-attach-db",
  ) as HTMLFormElement;
  const formLoadExt = document.getElementById(
    "form-load-extension",
  ) as HTMLFormElement;

  // Role-based visibility for management buttons
  if (!canManageDatabases()) {
    const btnCreate = document.getElementById("btn-create-db");
    const btnMount = document.getElementById("btn-mount-db");
    if (btnCreate) btnCreate.style.display = "none";
    if (btnMount) btnMount.style.display = "none";
  }

  // Encryption checkbox toggles
  const createEncryptedCheckbox = document.getElementById(
    "create-encrypted",
  ) as HTMLInputElement;
  const createKeyRow = document.getElementById("create-key-row");
  const mountEncryptedCheckbox = document.getElementById(
    "mount-encrypted",
  ) as HTMLInputElement;
  const mountKeyRow = document.getElementById("mount-key-row");

  createEncryptedCheckbox?.addEventListener("change", () => {
    if (createKeyRow) {
      createKeyRow.style.display = createEncryptedCheckbox.checked
        ? "block"
        : "none";
    }
  });

  mountEncryptedCheckbox?.addEventListener("change", () => {
    if (mountKeyRow) {
      mountKeyRow.style.display = mountEncryptedCheckbox.checked
        ? "block"
        : "none";
    }
  });

  // Helper: Parse extensions textarea (one path per line)
  function parseExtensions(value: string): string[] {
    return value
      .split("\n")
      .map((s) => s.trim())
      .filter((s) => s.length > 0);
  }

  // Helper: Parse pragmas textarea (key=value per line)
  function parsePragmas(value: string): { [key: string]: string } {
    const result: { [key: string]: string } = {};
    value.split("\n").forEach((line) => {
      const trimmed = line.trim();
      if (trimmed) {
        const idx = trimmed.indexOf("=");
        if (idx > 0) {
          const key = trimmed.slice(0, idx).trim();
          const val = trimmed.slice(idx + 1).trim();
          if (key) result[key] = val;
        }
      }
    });
    return result;
  }

  // Modal Handlers
  document
    .getElementById("btn-create-db")
    ?.addEventListener("click", () => modalCreate?.showModal());
  document
    .getElementById("btn-mount-db")
    ?.addEventListener("click", () => modalMount?.showModal());

  document.querySelectorAll(".btn-close-modal").forEach((btn) => {
    btn.addEventListener("click", () => {
      modalCreate?.close();
      modalMount?.close();
      modalAttach?.close();
      modalLoadExt?.close();
    });
  });

  // Form Submissions
  formCreate?.addEventListener("submit", async (e) => {
    e.preventDefault();
    const formData = new FormData(formCreate);

    // Build CreateDatabaseRequest with inline fields (no db_path - server determines it)
    const request = {
      name: formData.get("name") as string,
      isEncrypted: formData.get("isEncrypted") === "on",
      key: (formData.get("key") as string) || "",
      extensions: parseExtensions((formData.get("extensions") as string) || ""),
      pragmas: parsePragmas((formData.get("pragmas") as string) || ""),
      maxOpenConns: parseInt(formData.get("maxOpenConns") as string) || 0,
      maxIdleConns: parseInt(formData.get("maxIdleConns") as string) || 0,
      connMaxLifetimeMs:
        parseInt(formData.get("connMaxLifetimeMs") as string) || 0,
    };

    try {
      const client = getClient(AdminService);
      const headers = getAuthHeaders();
      await client.createDatabase(request, { headers });
      formCreate.reset();
      if (createKeyRow) createKeyRow.style.display = "none";
      modalCreate.close();
      await loadDatabases();
    } catch (err: any) {
      showError("Failed to create database: " + err.message);
    }
  });

  formMount?.addEventListener("submit", async (e) => {
    e.preventDefault();
    const formData = new FormData(formMount);

    // Build DatabaseConfig directly (MountDatabase takes DatabaseConfig as request)
    const config = {
      name: formData.get("name") as string,
      dbPath: formData.get("dbPath") as string,
      isEncrypted: formData.get("isEncrypted") === "on",
      key: (formData.get("key") as string) || "",
      readOnly: formData.get("readOnly") === "on",
      extensions: parseExtensions((formData.get("extensions") as string) || ""),
      pragmas: parsePragmas((formData.get("pragmas") as string) || ""),
      maxOpenConns: parseInt(formData.get("maxOpenConns") as string) || 0,
      maxIdleConns: parseInt(formData.get("maxIdleConns") as string) || 0,
      connMaxLifetimeMs:
        parseInt(formData.get("connMaxLifetimeMs") as string) || 0,
    };

    try {
      const client = getClient(AdminService);
      const headers = getAuthHeaders();
      await client.mountDatabase(config, { headers });
      formMount.reset();
      if (mountKeyRow) mountKeyRow.style.display = "none";
      modalMount.close();
      await loadDatabases();
    } catch (err: any) {
      showError("Failed to mount database: " + err.message);
    }
  });

  formAttach?.addEventListener("submit", async (e) => {
    e.preventDefault();
    const formData = new FormData(formAttach);

    const parent = formData.get("parent") as string;
    const target = formData.get("target") as string;
    const alias = formData.get("alias") as string;

    try {
      const client = getClient(DatabaseService);
      const headers = getAuthHeaders();
      await client.attachDatabase(
        {
          parentDatabase: parent,
          attachment: {
            targetDatabaseName: target,
            alias: alias,
          },
        },
        { headers },
      );

      formAttach.reset();
      modalAttach.close();
      await loadDatabases();
    } catch (err: any) {
      showError("Failed to attach database: " + err.message);
    }
  });

  formLoadExt?.addEventListener("submit", async (e) => {
    e.preventDefault();
    const formData = new FormData(formLoadExt);

    const database = formData.get("database") as string;
    const folderName = formData.get("folderName") as string;

    try {
      const client = getClient(DatabaseService);
      const headers = getAuthHeaders();
      await client.loadExtension(
        {
          database: database,
          folderName: folderName,
        },
        { headers },
      );

      formLoadExt.reset();
      modalLoadExt.close();
      await loadDatabases();
    } catch (err: any) {
      showError("Failed to load extension: " + err.message);
    }
  });

  // Load Databases
  async function loadDatabases() {
    if (!localStorage.getItem(AUTH_KEY)) {
      window.location.href = "/studio/login";
      return;
    }

    try {
      const client = getClient(AdminService);
      const headers = getAuthHeaders();

      const response = await client.listDatabases({}, { headers });

      if (dbList) {
        if (response.databases.length === 0) {
          dbList.innerHTML =
            '<div class="empty-state">No databases found.</div>';
          return;
        }

        dbList.innerHTML = response.databases
          .map((db) => {
            const isManaged = db.isManaged;
            const badgeClass = isManaged ? "badge-managed" : "badge-mounted";
            const badgeText = isManaged ? "Managed" : "Mounted";

            const roBadgeClass = db.readOnly ? "badge-ro" : "badge-rw";
            const roBadgeText = db.readOnly ? "Read Only" : "Read Write";

            // Only show management actions for those who can manage databases
            const actionBtn =
              (canManageDatabases()
                ? isManaged
                  ? `<button class="btn btn-sm btn-danger btn-delete-db" data-name="${db.name}">Delete</button>`
                  : `<button class="btn btn-sm btn-warning btn-unmount-db" data-name="${db.name}">Unmount</button>`
                : "") +
              `<button class="btn btn-sm btn-primary-outline btn-open-attach" data-name="${db.name}">Attach</button>`;

            // Render current attachments
            let attachmentsHtml = "";
            if (db.currentAttachments && db.currentAttachments.length > 0) {
              attachmentsHtml = `
                <div class="attachments-section">
                  <div class="attachments-card">
                    <h4>Attached Databases</h4>
                    <div class="attachments-list">
                      ${db.currentAttachments
                        .map(
                          (att) => `
                        <div class="attachment-badge">
                          <span class="att-alias">${att.alias}</span>
                          <span class="att-name-sep">:</span>
                          <span class="att-target">${att.targetDatabaseName}</span>
                          <button class="btn-detach-inline" data-parent="${db.name}" data-alias="${att.alias}" title="Detach">
                            <svg xmlns="http://www.w3.org/2000/svg" width="10" height="10" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="4" stroke-linecap="round" stroke-linejoin="round"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
                          </button>
                        </div>
                      `,
                        )
                        .join("")}
                    </div>
                  </div>
                </div>
              `;
            }

            // Render loaded extensions
            let extensionsHtml = "";
            if (db.loadedExtensions && db.loadedExtensions.length > 0) {
              extensionsHtml = `
                <div class="attachments-section" style="margin-top: 0.75rem;">
                  <div class="attachments-card" style="border-color: rgba(96, 165, 250, 0.2);">
                    <h4>Loaded Extensions</h4>
                    <div class="attachments-list">
                      ${db.loadedExtensions
                        .map(
                          (ext) => `
                        <div class="attachment-badge" style="border-color: rgba(96, 165, 250, 0.4); background: rgba(96, 165, 250, 0.05);">
                          <span class="att-alias" style="color: var(--accent-color);">${ext}</span>
                        </div>
                      `,
                        )
                        .join("")}
                    </div>
                  </div>
                </div>
              `;
            }

            return `
          <div class="card db-card">
            <div class="db-icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M3 6h3"/><path d="M21 6h-3"/><path d="M12 3v18"/><path d="M3 18h18"/><path d="M3 12h18"/><path d="M3 6v12c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2H5c-1.1 0-2 .9-2 2z"/></svg>
            </div>
            <div class="db-info">
              <div class="db-header">
                <h3>${db.name}</h3>
                <div class="db-badges">
                  <span class="badge ${badgeClass}">${badgeText}</span>
                  <span class="badge ${roBadgeClass}">${roBadgeText}</span>
                </div>
              </div>

              <div class="path-container">
                <label class="path-label">File Path</label>
                <p class="db-path" title="${db.path}">${db.path}</p>
              </div>

              ${attachmentsHtml}
              ${extensionsHtml}

              <div class="db-actions">
                 <a href="/studio/console?db=${db.name}" class="btn btn-sm btn-secondary">Query</a>
                 <a href="/studio/explain?db=${db.name}" class="btn btn-sm btn-secondary">Explain</a>
                 <a href="/studio/tables?db=${db.name}" class="btn btn-sm btn-secondary">Tables</a>
                 <a href="/studio/transaction?db=${db.name}" class="btn btn-sm btn-secondary">Transaction</a>
                 ${actionBtn}
                 <button class="btn btn-sm btn-primary-outline btn-open-load-ext" data-name="${db.name}">Load Ext</button>
              </div>
            </div>
          </div>
        `;
          })
          .join("");

        // Re-attach listeners for Delete/Unmount
        document.querySelectorAll(".btn-delete-db").forEach((btn) => {
          btn.addEventListener("click", (e) => {
            const name = (e.currentTarget as HTMLElement).getAttribute(
              "data-name",
            );
            if (name) {
              const input = prompt(
                `Are you sure you want to PERMANENTLY DELETE database '${name}'? This cannot be undone.\n\nPlease type the database name '${name}' to confirm:`,
              );
              if (input === name) {
                deleteDatabase(name);
              } else if (input !== null) {
                alert("Database name mismatch. Delete cancelled.");
              }
            }
          });
        });

        document.querySelectorAll(".btn-unmount-db").forEach((btn) => {
          btn.addEventListener("click", (e) => {
            const name = (e.currentTarget as HTMLElement).getAttribute(
              "data-name",
            );
            if (name) {
              const input = prompt(
                `Unmount database '${name}'?\n\nPlease type the database name '${name}' to confirm:`,
              );
              if (input === name) {
                unmountDatabase(name);
              } else if (input !== null) {
                alert("Database name mismatch. Unmount cancelled.");
              }
            }
          });
        });

        // Attach listeners for Attach modal
        document.querySelectorAll(".btn-open-attach").forEach((btn) => {
          btn.addEventListener("click", (e) => {
            const name = (e.currentTarget as HTMLElement).getAttribute(
              "data-name",
            );
            if (name) {
              openAttachModal(
                name,
                response.databases.map((d) => d.name),
              );
            }
          });
        });

        // Attach listeners for Detach
        document.querySelectorAll(".btn-detach-inline").forEach((btn) => {
          btn.addEventListener("click", (e) => {
            const parent = (e.currentTarget as HTMLElement).getAttribute(
              "data-parent",
            );
            const alias = (e.currentTarget as HTMLElement).getAttribute(
              "data-alias",
            );
            if (parent && alias) {
              const input = prompt(
                `Are you sure you want to detach '${alias}' from '${parent}'?\n\nPlease type the alias '${alias}' to confirm:`,
              );
              if (input === alias) {
                detachDatabase(parent, alias);
              } else if (input !== null) {
                alert("Alias mismatch. Detach cancelled.");
              }
            }
          });
        });

        // Attach listeners for Load Extension modal
        document.querySelectorAll(".btn-open-load-ext").forEach((btn) => {
          btn.addEventListener("click", (e) => {
            const name = (e.currentTarget as HTMLElement).getAttribute(
              "data-name",
            );
            if (name) {
              openLoadExtModal(name);
            }
          });
        });
      }
    } catch (err: any) {
      console.error(err);
      showError(
        "Failed to load databases: " + (err.message || "Unknown error"),
      );

      // If unauthorized, redirect to login
      if (err.code === 16 || err.message?.includes("unauthenticated")) {
        await performLogout();
      }
    }
  }

  async function deleteDatabase(name: string) {
    try {
      const client = getClient(AdminService);
      const headers = getAuthHeaders();
      await client.deleteDatabase({ name }, { headers });
      await loadDatabases();
    } catch (err: any) {
      showError(`Failed to delete '${name}': ${err.message}`);
    }
  }

  async function unmountDatabase(name: string) {
    try {
      const client = getClient(AdminService);
      const headers = getAuthHeaders();
      await client.unMountDatabase({ name }, { headers });
      await loadDatabases();
    } catch (err: any) {
      showError(`Failed to unmount '${name}': ${err.message}`);
    }
  }

  async function detachDatabase(parent: string, alias: string) {
    try {
      const client = getClient(DatabaseService);
      const headers = getAuthHeaders();
      await client.detachDatabase(
        { parentDatabase: parent, alias },
        { headers },
      );
      await loadDatabases();
    } catch (err: any) {
      showError(`Failed to detach '${alias}': ${err.message}`);
    }
  }

  function openAttachModal(parentName: string, allDbNames: string[]) {
    const parentInput = document.getElementById(
      "attach-parent",
    ) as HTMLInputElement;
    const parentDisplay = document.getElementById(
      "attach-parent-display",
    ) as HTMLElement;
    const targetSelect = document.getElementById(
      "attach-target",
    ) as HTMLSelectElement;

    if (parentInput) parentInput.value = parentName;
    if (parentDisplay) parentDisplay.textContent = parentName;

    // Filter out the parent from the list of databases to attach
    if (targetSelect) {
      targetSelect.innerHTML =
        '<option value="">-- Select a database --</option>' +
        allDbNames
          .filter((name) => name !== parentName)
          .map((name) => `<option value="${name}">${name}</option>`)
          .join("");
    }

    modalAttach?.showModal();
  }

  async function openLoadExtModal(dbName: string) {
    const dbInput = document.getElementById("load-ext-db") as HTMLInputElement;
    const dbDisplay = document.getElementById(
      "load-ext-db-display",
    ) as HTMLElement;
    const extSelect = document.getElementById(
      "load-ext-select",
    ) as HTMLSelectElement;

    if (dbInput) dbInput.value = dbName;
    if (dbDisplay) dbDisplay.textContent = dbName;

    if (extSelect) {
      extSelect.innerHTML = '<option value="">-- Loading... --</option>';
      try {
        const client = getClient(DatabaseService);
        const headers = getAuthHeaders();
        const response = await client.listExtensions(
          { database: dbName },
          { headers },
        );

        extSelect.innerHTML =
          '<option value="">-- Select an extension --</option>' +
          response.extensions
            .map(
              (ext) =>
                `<option value="${ext.folderName}" ${ext.isLoaded ? "disabled" : ""}>${ext.name} v${ext.version} ${ext.isLoaded ? "(Already loaded)" : ""}</option>`,
            )
            .join("");
      } catch (err: any) {
        extSelect.innerHTML =
          '<option value="">Error loading extensions</option>';
        showError("Failed to list extensions: " + err.message);
      }
    }

    modalLoadExt?.showModal();
  }

  function showError(msg: string) {
    if (errorAlert) {
      errorAlert.style.display = "block";
      errorAlert.textContent = msg;
      setTimeout(() => {
        errorAlert.style.display = "none";
      }, 5000);
    }
  }

  loadDatabases();
</script>

